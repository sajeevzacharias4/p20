<h1>Rooms</h1><br />

<%= link_to 'New Room', new_room_path %>



<h2>Import Rooms</h2>
<%= form_tag import_rooms_path, :multipart=> true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<br />
<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Ref</th>
    <th>Host ref</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.ref %></td>
    <td><%= room.host_ref %></td>
    <td><%= room.capacity %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


